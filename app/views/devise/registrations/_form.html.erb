<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: true }, html: { id: "registration_form" }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(resource.errors.count, "error") %> prohibited this registration from being saved:</h4>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control #{'is-invalid' if resource.errors[:username].any?}", autofocus: true %>
    <% if resource.errors[:username].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:username].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if resource.errors[:name].any?}" %>
    <% if resource.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:name].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:email].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:password].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:password_confirmation].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :terms_of_service, class: "form-check-input #{'is-invalid' if resource.errors[:terms_of_service].any?}" %>
    <%= f.label :terms_of_service, "I agree to the Terms of Service", class: "form-check-label" %>
    <% if resource.errors[:terms_of_service].any? %>
      <div class="invalid-feedback">
        <%= resource.errors[:terms_of_service].join(", ") %>
      </div>
    <% end %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
