<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Blog Categories</h1>
    <%= link_to "New Category", new_admin_blog_category_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Slug</th>
              <th>Posts Count</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @blog_categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= truncate(category.description, length: 100) %></td>
                <td><%= category.slug %></td>
                <td><%= category.blog_posts.count %></td>
                <td>
                  <%= link_to "Edit", edit_admin_blog_category_path(category), class: "btn btn-sm btn-outline-primary me-2" %>
                  <%= link_to "Delete", admin_blog_category_path(category), 
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
