<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title mb-0">Merge Tag</h2>
      </div>
      
      <div class="card-body">
        <p class="text-muted mb-4">
          Merge "<strong><%= @tag.name %></strong>" into another tag. All posts tagged with
          "<strong><%= @tag.name %></strong>" will be tagged with the selected tag instead.
          This action cannot be undone.
        </p>
        
        <%= form_with(url: merge_admin_tag_path(@tag), method: :post) do |f| %>
          <div class="mb-3">
            <%= f.label :target_tag_id, "Select target tag", class: "form-label" %>
            <%= f.collection_select :target_tag_id,
                @target_tags,
                :id,
                :name,
                { prompt: "Choose a tag..." },
                { class: "form-select" } %>
          </div>
          
          <div class="text-end">
            <%= link_to "Cancel", admin_tag_path(@tag), class: "btn btn-link" %>
            <%= f.submit "Merge Tags", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
