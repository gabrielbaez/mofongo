<!DOCTYPE html>
<html>
  <head>
    <title>Mofongo Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <link href="https://use.fontawesome.com/releases/v6.4.2/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "admin", "data-turbo-track": "reload", defer: true, type: "module" %>
  </head>

  <body class="vh-100">
    <div class="d-flex h-100">
      <%= render 'admin/shared/sidebar_menu' %>

      <main class="flex-grow-1 p-3 overflow-auto">
        <div class="container-fluid">
          <% if notice %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= notice %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          
          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= alert %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
