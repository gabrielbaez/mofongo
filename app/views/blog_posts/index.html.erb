<div class="container py-5">
  <h1 class="mb-4">Blog</h1>

  <div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-calendar3"></i> Archives
          </h5>
        </div>
        <div class="list-group list-group-flush">
          <% @archive_dates.each do |date, count| %>
            <%= link_to archive_blog_posts_path(
                  year: date.year,
                  month: date.month
                ),
                class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              <%= date.strftime("%B %Y") %>
              <span class="badge bg-secondary rounded-pill"><%= count %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <% @blog_posts.each do |post| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, blog_post_path(post), class: "text-decoration-none" %></h5>
            
            <div class="mb-2">
              <small class="text-muted">
                <%= post.published_at.strftime("%B %d, %Y") %> in 
                <%= link_to post.blog_category.name, blog_category_path(post.blog_category), class: "text-decoration-none" %>
              </small>
            </div>
            
            <p class="card-text"><%= truncate(post.content, length: 150) %></p>
            
            <%= link_to "Read more", blog_post_path(post), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
