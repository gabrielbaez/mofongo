<div id="<%= dom_id(achievement_share) %>" class="card mb-4">
  <div class="card-body">
    <div class="d-flex align-items-start">
      <div class="achievement-icon me-3 fs-2">
        <%= achievement_share.achievement.badge_icon %>
      </div>
      
      <div class="flex-grow-1">
        <div class="d-flex justify-content-between align-items-start mb-2">
          <div>
            <%= link_to achievement_share.user.display_name,
                profile_path(achievement_share.user),
                class: "fw-bold text-decoration-none" %>
            unlocked
            <span class="fw-bold"><%= achievement_share.achievement.name %></span>
          </div>
          
          <small class="text-muted">
            <%= time_ago_in_words(achievement_share.created_at) %> ago
          </small>
        </div>
        
        <p class="mb-2">
          <%= achievement_share.achievement.description %>
          <span class="text-success">
            (+<%= achievement_share.achievement.points %> points)
          </span>
        </p>
        
        <% if achievement_share.message.present? %>
          <div class="card bg-light">
            <div class="card-body py-2">
              <%= achievement_share.message %>
            </div>
          </div>
        <% end %>
        
        <div class="mt-3">
          <%= button_to like_achievement_share_path(achievement_share),
              method: :post,
              class: "btn btn-sm btn-outline-primary" do %>
            <i class="bi bi-heart"></i>
            <%= achievement_share.likes_count %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
